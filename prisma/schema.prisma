generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Status zgłoszenia
enum Status {
  PENDING
  APPROVED
  REJECTED
}

// Typ formularza
enum FormType {
  DEKLARACJA_CZLONKOWSKA
}

// Model reprezentujący pojedyncze zgłoszenie formularza
model Submission {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  status    Status   @default(PENDING)
  formType  FormType
  
  formData  Json     // JSON dla PostgreSQL
  filePath  String   // Ścieżka do pliku PDF
  fileName  String   // Oryginalna nazwa pliku
}
